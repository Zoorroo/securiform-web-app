{% extends 'base.html.twig' %}

{% block title %}Connexion - SECURIFORM{% endblock %}

{% block body %}
<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #f5f5f5;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .login-left {
        flex: 1;
        background: url('{{ asset('/images/dashboard_image.png') }}') no-repeat center center;
        background-size: cover;
        filter: brightness(0.6);
    }

    .login-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        background: white;
    }

    .login-box {
        width: 80%;
        max-width: 400px;
    }

    .logo {
        display: flex;
        align-items: center;
        margin-bottom: 40px;
    }

    .logo img {
        height: 40px;
    }

    h1 {
        color: #333;
        font-size: 24px;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-size: 14px;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        font-size: 14px;
        background: #f8f8f8;
    }

    input[type="email"]:focus,
    input[type="password"]:focus {
        outline: none;
        border-color: #c00000;
        background: white;
    }

    .forgot-password {
        text-align: right;
        font-size: 14px;
        margin-top: -15px;
        margin-bottom: 20px;
    }

    .forgot-password a {
        color: #c00000;
        text-decoration: none;
    }

    .forgot-password a:hover {
        text-decoration: underline;
    }

    .remember-me {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

    .remember-me input {
        margin-right: 10px;
    }

    .remember-me label {
        margin-bottom: 0;
        font-size: 14px;
        color: #666;
    }

    .btn-submit {
        width: 100%;
        padding: 14px;
        background-color: #c00000;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .btn-submit:hover {
        background-color: #a00000;
    }

    .error-message {
        color: #c00000;
        background: #ffe6e6;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
        font-size: 14px;
    }
</style>

<div class="login-container">
    <div class="login-left"></div>
    <div class="login-right">
        <div class="login-box">
            <div class="logo">
                <img src="{{ asset('images/logo.png') }}" alt="Logo SECURIFORM">
            </div>

            <h1>CONNEXION</h1>

            {% if error %}
                <div class="error-message">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" id="inputEmail" name="_username" value="{{ last_username }}" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" id="inputPassword" name="_password" required>
                </div>

                <div class="forgot-password">
                    <a href="#">Mot de passe oubli√© ?</a>
                </div>

                <div class="remember-me">
                    <input type="checkbox" name="_remember_me" id="remember_me">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn-submit">Se connecter</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
